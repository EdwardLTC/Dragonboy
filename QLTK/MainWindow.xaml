<Window
  x:Class="QLTK.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:QLTK"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="QLTK - NRO"
  Width="1300"
  Height="700"
  Background="{DynamicResource MaterialDesignPaper}"
  Closed="Window_Closed"
  FontFamily="{materialDesign:MaterialDesignFont}"
  TextElement.FontSize="14"
  TextElement.FontWeight="Medium"
  TextElement.Foreground="{DynamicResource MaterialDesignBody}"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">
  <Grid x:Name="GridMain">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition Width="400" />
    </Grid.ColumnDefinitions>

    <materialDesign:Card Margin="5">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <DataGrid
          x:Name="ListViewAccount"
          Margin="5"
          d:ItemsSource="{d:SampleData ItemCount=5}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          IsReadOnly="True"
          LoadingRow="ListViewAccount_LoadingRow"
          MouseDoubleClick="ListViewAccount_MouseDoubleClick"
          SelectionChanged="ListViewAccount_SelectionChanged">
          <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding number}" Header="STT" />
            <DataGridTextColumn Binding="{Binding username}" Header="Tài khoản" />
            <DataGridTextColumn Header="Máy chủ" />
            <DataGridTextColumn
              Width="*"
              Binding="{Binding status}"
              Header="Trạng thái" />
          </DataGrid.Columns>
        </DataGrid>
      </Grid>
    </materialDesign:Card>

    <StackPanel Grid.Column="1">
      <materialDesign:Card Margin="5">
        <StackPanel>
          <TextBox
            x:Name="TextBoxUsername"
            Margin="5"
            materialDesign:HintAssist.Hint="Tên đăng nhập" />
          <PasswordBox
            x:Name="PasswordBoxPassword"
            Margin="5"
            materialDesign:HintAssist.Hint="Mật khẩu" />
          <ComboBox
            x:Name="ComboBoxServer"
            Margin="5"
            materialDesign:HintAssist.Hint="Máy chủ" />
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition />
              <ColumnDefinition />
              <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
              x:Name="ButtonAddAccount"
              Margin="5"
              Click="ButtonAddAccount_Click"
              Content="Thêm" />
            <Button
              x:Name="ButtonEditAccount"
              Grid.Column="1"
              Margin="5"
              Click="ButtonEditAccount_Click"
              Content="Sửa" />
            <Button
              x:Name="ButtonDeleteAccount"
              Grid.Column="2"
              Margin="5"
              Click="ButtonDeleteAccount_Click"
              Content="Xoá" />
          </Grid>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition />
              <ColumnDefinition />
              <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
              x:Name="ButtonLogin"
              Margin="5"
              Click="ButtonLogin_Click"
              Content="Login" />
            <Button
              x:Name="ButtonLoginAll"
              Grid.Column="1"
              Margin="5"
              Click="ButtonLoginAll_Click"
              Content="Login All" />
            <Button
              x:Name="ButtonKill"
              Grid.Column="2"
              Margin="5"
              Click="ButtonKill_Click"
              Content="Quit" />
          </Grid>

          <Button
            x:Name="ButtonArrangeWindows"
            Margin="5"
            Click="ButtonArrangeWindows_Click"
            Content="Sắp xếp cửa sổ" />

          <Button
            x:Name="ButtonTest"
            Margin="5"
            Click="ButtonTest_Click"
            Content="Test" />
        </StackPanel>
      </materialDesign:Card>
    </StackPanel>
  </Grid>
</Window>
